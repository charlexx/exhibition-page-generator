{
  "title": "Exhibition",
  "description": "Schema for art exhibition page generator input",
  "type": "object",
  "required": ["title", "dates", "venue", "artists", "artworks"],
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "dates": {
      "type": "object",
      "required": ["start", "end"],
      "additionalProperties": false,
      "properties": {
        "start": {
          "type": "string",
          "format": "date"
        },
        "end": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "venue": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "mapUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "artists": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "bio": {
            "type": "string"
          },
          "photo": {
            "type": "string"
          },
          "website": {
            "type": "string",
            "format": "uri"
          },
          "nationality": {
            "type": "string"
          },
          "birthYear": {
            "type": "integer"
          }
        }
      }
    },
    "artworks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "artist": {
            "type": "string"
          },
          "year": {
            "oneOf": [
              { "type": "integer" },
              { "type": "string" }
            ]
          },
          "medium": {
            "type": "string"
          },
          "dimensions": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "string"
          }
        }
      }
    },
    "curator": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        },
        "photo": {
          "type": "string"
        }
      }
    },
    "openingHours": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "days": {
            "type": "string"
          },
          "hours": {
            "type": "string"
          }
        }
      }
    },
    "admission": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "general": {
          "type": "string"
        },
        "concession": {
          "type": "string"
        },
        "children": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "website": {
          "type": "string",
          "format": "uri"
        },
        "instagram": {
          "type": "string",
          "format": "uri"
        },
        "twitter": {
          "type": "string",
          "format": "uri"
        },
        "facebook": {
          "type": "string",
          "format": "uri"
        },
        "ticketing": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "inquiryEmail": {
      "type": "string",
      "format": "email"
    },
    "theme": {
      "type": "string",
      "enum": ["light", "dark", "minimal"]
    }
  }
}
